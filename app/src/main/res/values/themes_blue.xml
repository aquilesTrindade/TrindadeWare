<resources>
    <style name="AppTheme" parent="Platform.AppTheme">
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="collapsingToolbarLayoutStyle">?attr/collapsingToolbarLayoutLargeStyle</item>
        <item name="collapsingToolbarLayoutLargeSize">@dimen/collapsing_toolbar_large_size</item>
        <item name="collapsingToolbarLayoutLargeStyle">@style/AppTheme.CollapsingToolbar</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>

        <item name="fontFamily">@font/gilroy</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>

    <style name="AppTheme.Main">
        <item name="navigationViewStyle">@style/MainDrawer</item>
    </style>

    <style name="AppTheme.Design">
        <item name="actionBarSize">@dimen/mtrl_toolbar_default_height</item>
        <item name="toolbarStyle">@style/AppTheme.Design.Toolbar</item>
    </style>

    <style name="AppTheme.Starting">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Platform.V21.AppTheme" parent="Base.AppTheme">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
